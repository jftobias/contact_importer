<div class="row-fluid">
  <div class="span12">
    <div class="login well well-small">
      <div class="center">
        <h2>Sign up</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "login-form"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="control-group">
          <span class="add-on"><i class="icon-user"></i></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
        </div>

        <div class="control-group">
          <% if @minimum_password_length %>
          <span span class="add-on"><i class="icon-lock"></i></span>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (#{@minimum_password_length} characters min.)"%>
          <% end %>
        </div>

        <div class="control-group">
          <span class="add-on"><i class="icon-lock"></i></span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
        <%= render "devise/shared/links"%>
      <% end %>
    </div>
  </div>
</div>
